DOCKERFILE image
  FILE
    FROM node:15.5.1-alpine AS npmrc
    RUN apk add expect
    COPY login.sh login.sh
    RUN ./login.sh

    FROM node:15.5.1-alpine
    COPY --from=npmrc /root/.npmrc /root/.npmrc
    COPY patch.sh /usr/local/bin/patch

ARTEFACT image
  CONDITION ! docker inspect node-base > /dev/null

  DEPENDS ON ../../../+npm

  STEP image
    DOCKERFILE image
    TAG node-base