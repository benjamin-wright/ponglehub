ARTEFACT start
  DEPENDS ON ../..+raw-cluster

ARTEFACT stop
  DEPENDS ON ../../+stop

DOCKERFILE go
  FILE
    FROM scratch
    COPY event-gateway /event-gateway
    ENTRYPOINT [ "/event-gateway" ]
  IGNORE
    !event-gateway

ARTEFACT image
  STEP build
    COMMAND
      CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
        go build -v -o dist/event-gateway ./main.go

  STEP image
    DOCKERFILE go
    TAG localhost:5000/event-gateway
    CONTEXT ./dist

ARTEFACT test
  STEP test
    COMMAND
      go test -v ./internal/...

ARTEFACT int-test
  STEP test
    COMMAND
      go test -v ./integration