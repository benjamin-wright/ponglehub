DEVENV db
  COMPOSE
    version: '3.9'
    services:
      cockroachdb:
        image: cockroachdb/cockroach:v20.2.8
        command: start-single-node --insecure
        ports:
        - "26257:26257"
        - "8080:8080"

ARTEFACT test
  STEP test
    DEVENV db
    COMMAND
      DB_HOST=localhost \
      DB_USER=test_user \
      go test -v ./pkg/...
