ARTEFACT start
  DEPENDS ON ../..+raw-cluster

ARTEFACT stop
  DEPENDS ON ../../+stop

DOCKERFILE go
  FILE
    FROM scratch
    COPY event-broker /event-broker
    ENTRYPOINT [ "/event-broker" ]
  IGNORE
    !event-broker

ARTEFACT image
  STEP build
    COMMAND
      CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
        go build -v -o dist/event-broker ./main.go

  STEP image
    DOCKERFILE go
    TAG localhost:5000/event-broker
    CONTEXT ./dist

ARTEFACT test
  STEP test
    COMMAND
      go test -v ./internal/...

ARTEFACT int-test
  STEP test
    COMMAND
      go test -v ./integration
