{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Mudfile",
	"patterns": [
		{ "include": "#comment" },
		{ "include": "#docker-include" },
		{ "include": "#artefact" },
		{ "include": "#pipeline" },
		{ "include": "#env" }
	],
	"scopeName": "source.mudfile",
	"repository": {
		"comment": {
			"patterns": [
				{
					"captures": {
						"1": { "name": "punctuation.whitespace.comment.leading.mudfile" },
						"2": { "name": "comment.line.number-sign.mudfile" },
						"3": { "name": "punctuation.definition.comment.mudfile" }
					},
					"comment": "comment.line",
					"match": "^(\\s*)((#).*$\\n?)"
				},
				{
					"name": "comment.line.mudfile",
					"match": "(\\s+)((#).*$\\n?)"
				},
				{
					"captures": {
						"2": { "name": "comment.line.number-sign.mudfile" }
					},
					"match": "([\\\\\\s]+)((#).*$\\n?)"
				},
				{
					"name": "comment.line.number-sign.mudfile",
					"begin": "(\\/\\*)",
					"beginCaptures": {
						"1": { "name": "punctuation.definition.comment.mudfile" }
					},
					"end": "(\\*/)",
					"endCaptures": {
						"1": { "name": "punctuation.definition.comment.mudfile" }
					}
				}
			]
		},
		"artefact": {
			"begin": "^(ARTEFACT) (\\S*)$",
			"beginCaptures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "variable.parameter" }
			},
			"end": "(?x)(?= ^\\S)",
			"name": "custom.mudfile.artefact",
			"patterns": [
				{ "include": "#steps" },
				{ "include": "#depends-on" },
				{ "include": "#env" },
				{ "include": "#pipeline-ref" },
				{ "include": "#artefact-condition" }
			]
		},
		"env": {
			"match": "^(?: \\s+)?(ENV) (\\S*)(\\=)(\\S*)$",
			"captures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "variable.other.readwrite" },
				"3": { "name": "keyword.operator" },
				"4": { "name": "variable.parameter" }
			}
		},
		"tag": {
			"match": "^(?: \\s+)?(TAG) (\\S*)$",
			"captures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "variable.parameter" }
			}
		},
		"pipeline": {
			"begin": "^(PIPELINE) (\\S*)$",
			"beginCaptures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "variable.parameter" }
			},
			"end": "(?x)(?= ^\\S)",
			"name": "custom.mudfile.pipeline",
			"patterns": [
				{ "include": "#steps" },
				{ "include": "#env" }
			]
		},
		"pipeline-ref": {
			"match": "^\\s{2}(PIPELINE) (\\S+)(?:\\s(\\S+))?$",
			"captures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "entity.name.type.class" },
				"3": { "name": "variable.parameter" }
			}
		},
		"depends-on": {
			"match": "^\\s{2}(DEPENDS\\sON)\\s(\\S*\\+\\S+)$",
			"captures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "entity.name.type.class" }
			}
		},
		"steps": {
			"begin": "^\\s{2}(STEP) (\\S*)$",
			"beginCaptures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "variable.parameter" }
			},
			"end": "(?x)(?= ^\\s{0,2}\\S)",
			"name": "custom.mudfile.step",
			"patterns": [
				{ "include": "#command" },
				{ "include": "#condition" },
				{ "include": "#docker-link" },
				{ "include": "#env" },
				{ "include": "#watch" },
				{ "include": "#tag" },
				{ "include": "#wait-for" }
			]
		},
		"watch": {
			"patterns": [
				{
					"match": "^\\s{4}(WATCH)(((?:\\s)\\S+)+)$",
					"captures": {
						"1": { "name": "keyword.control" },
						"2": { "name": "variable.parameter" }
					}
				},
				{
					"begin": "^\\s{4}(WATCH)$",
					"beginCaptures": {
						"1": { "name": "keyword.control" }
					},
					"end": "(?x)(?= ^\\s{0,4}\\S)",
					"name": "variable.parameter"
				}
			]
		},
		"wait-for": {
			"match": "^\\s{4}(WAIT\\sFOR)\\s(.+)$",
			"captures": {
				"1": { "name": "keyword.control" },
				"2": {
					"name": "meta.embedded.block.shellscript",
					"patterns": [
						{ "include": "source.shell" }
					]
				}
			}
		},
		"command": {
			"patterns": [
				{
					"begin": "^\\s{4}(COMMAND)$",
					"beginCaptures": {
						"1": { "name": "keyword.control" }
					},
					"end": "(?x)(?= ^\\s{0,4}\\S)",
					"name": "meta.embedded.block.shellscript",
					"patterns": [
						{ "include": "source.shell" }
					]
				},
				{
					"match": "^\\s{4}(COMMAND)\\s(.+)$",
					"captures": {
						"1": { "name": "keyword.control" },
						"2": {
							"name": "meta.embedded.block.shellscript",
							"patterns": [
								{ "include": "source.shell" }
							]
						}
					}
				}
			]
		},
		"artefact-condition": {
			"patterns": [
				{
					"begin": "^\\s{2}(CONDITION)$",
					"beginCaptures": {
						"1": { "name": "keyword.control" }
					},
					"end": "(?x)(?= ^\\s{0,2}\\S)",
					"name": "meta.embedded.block.shellscript",
					"patterns": [
						{ "include": "source.shell" }
					]
				},
				{
					"match": "^\\s{2}(CONDITION)\\s(.+)$",
					"captures": {
						"1": { "name": "keyword.control" },
						"2": {
							"name": "meta.embedded.block.shellscript",
							"patterns": [
								{ "include": "source.shell" }
							]
						}
					}
				}
			]
		},
		"condition": {
			"patterns": [
				{
					"begin": "^\\s{4}(CONDITION)$",
					"beginCaptures": {
						"1": { "name": "keyword.control" }
					},
					"end": "(?x)(?= ^\\s{0,4}\\S)",
					"name": "meta.embedded.block.shellscript",
					"patterns": [
						{ "include": "source.shell" }
					]
				},
				{
					"match": "^\\s{4}(CONDITION)\\s(.+)$",
					"captures": {
						"1": { "name": "keyword.control" },
						"2": {
							"name": "meta.embedded.block.shellscript",
							"patterns": [
								{ "include": "source.shell" }
							]
						}
					}
				}
			]
		},
		"docker-link": {
			"match": "^\\s{4}(DOCKERFILE)\\s(.+)$",
			"captures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "entity.name.type.class" }
			}
		},
		"docker-include": {
			"begin": "^(DOCKERFILE) (\\S*)$",
			"beginCaptures": {
				"1": { "name": "keyword.control" },
				"2": { "name": "variable.parameter" }
			},
			"end": "(?x)(?= ^\\S)",
			"name": "custom.mudfile.dockerfile",
			"patterns": [
				{ "include": "#docker-file" },
				{ "include": "#docker-ignore" }
			]
		},
		"docker-file": {
			"begin": "^\\s{2}(FILE)$",
			"beginCaptures": {
				"1": { "name": "keyword.control" }
			},
			"end": "(?x)(?= ^\\s{0,2}\\S)",
			"contentName": "meta.embedded.block.dockerfile",
			"patterns": [
				{ "include": "source.dockerfile" }
			]
		},
		"docker-ignore": {
			"begin": "^\\s{2}(IGNORE)$",
			"beginCaptures": {
				"1": { "name": "keyword.control" }
			},
			"end": "(?x)(?= ^\\s{0,2}\\S)",
			"contentName": "custom.mudly.ignore"
		}
	}
}